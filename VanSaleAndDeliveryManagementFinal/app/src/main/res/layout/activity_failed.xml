<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.filedforce.activities.AllocatedActivity">

    <View
        android:id="@+id/vTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBgDefaultBlue"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_default="wrap" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/vTitle"
        app:layout_constraintStart_toStartOf="@id/vTitle"
        app:layout_constraintTop_toTopOf="@id/vTitle" />


    <ImageView
        android:id="@+id/ivMap"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:src="@drawable/ic_map"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vTitle"
        app:layout_constraintEnd_toEndOf="@id/vTitle"
        app:layout_constraintTop_toTopOf="@id/vTitle"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivRefresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:src="@drawable/ic_refresh"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vTitle"
        app:layout_constraintEnd_toStartOf="@id/ivMap"
        app:layout_constraintTop_toTopOf="@id/vTitle"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:src="@drawable/ic_notification"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vTitle"
        app:layout_constraintEnd_toStartOf="@id/ivRefresh"
        app:layout_constraintTop_toTopOf="@id/vTitle"
        tools:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vTitle"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/rvList"
        app:layout_constraintEnd_toEndOf="@id/rvList"
        app:layout_constraintStart_toStartOf="@id/rvList"
        app:layout_constraintTop_toTopOf="@id/rvList"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_border_dark"
        android:paddingStart="50dp"
        android:paddingTop="10dp"
        android:paddingEnd="50dp"
        android:paddingBottom="10dp"
        android:text="@string/retry"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvMessage"
        app:layout_constraintEnd_toEndOf="@id/rvList"
        app:layout_constraintStart_toStartOf="@id/rvList"
        app:layout_constraintTop_toTopOf="@id/rvList"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBgDefaultBlue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/rvList"
        app:layout_constraintEnd_toEndOf="@id/rvList"
        app:layout_constraintStart_toStartOf="@id/rvList"
        app:layout_constraintTop_toBottomOf="@id/tvRetry"
        tools:text="error"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>