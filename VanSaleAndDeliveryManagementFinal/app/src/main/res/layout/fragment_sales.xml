<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- PARENT SHOULD BE FOCUSABLE TO LOSS EDIT TEXT FOCUS ON CLEAR FOCUS-->
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBgDefaultWhite"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cbCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:buttonTint="@color/colorBgDefaultBlue"
            android:text="@string/credit"
            android:textColor="@color/colorBgDefaultBlue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/fabFinish"
            app:layout_constraintStart_toEndOf="@id/ivSearch"
            app:layout_constraintTop_toTopOf="@id/fabFinish" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:padding="2dp"
            android:src="@drawable/ic_search_blue"
            app:layout_constraintBottom_toBottomOf="@id/fabFinish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fabFinish" />

        <TextView
            android:id="@+id/tvItemCount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_blue_border"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/_0"
            android:textColor="@color/colorBgDefaultBlue"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/fabFinish"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHeight_min="25dp"
            app:layout_constraintTop_toTopOf="@id/fabFinish"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintWidth_min="25dp" />

        <ImageView
            android:id="@+id/ivRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_read"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/fabFinish"
            app:layout_constraintEnd_toStartOf="@id/fabFinish"
            app:layout_constraintTop_toTopOf="@id/fabFinish" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:backgroundTint="@color/colorBgDefaultBlue"
            android:src="@drawable/ic_next"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <AutoCompleteTextView
            android:id="@+id/etInvoiceNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_rounded_border_blue"
            android:gravity="center"
            android:hint="@string/invoice_no"
            android:inputType="text"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/colorDarkGray"
            android:textColorHint="@color/colorAlphaDarkBlue"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/etInvoiceDate"
            app:layout_constraintEnd_toStartOf="@id/etInvoiceDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fabFinish" />

        <EditText
            android:id="@+id/etInvoiceDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rounded_border_blue"
            android:focusable="false"
            android:gravity="center"
            android:hint="@string/invoice_date"
            android:inputType="none"
            android:padding="3dp"
            android:textColor="@color/colorDarkGray"
            app:layout_constraintTop_toBottomOf="@id/fabFinish"  android:textColorHint="@color/colorAlphaDarkBlue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/etInvoiceNo" />

        <AutoCompleteTextView
            android:id="@+id/etCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:selectAllOnFocus="true"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/caps_customer_name"
            android:inputType="text"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/colorDarkGray"
            android:textColorHint="@color/colorAlphaDarkBlue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etInvoiceDate" />

        <View
            android:id="@+id/vCustomerName"
            app:layout_constraintTop_toBottomOf="@id/etCustomerName"
            android:background="@drawable/bg_alpha_both_side_black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/etCustomerAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:gravity="center"
            android:hint="@string/customer_address"
            android:inputType="text"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/colorDarkGray"
            android:textColorHint="@color/colorAlphaDarkBlue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vCustomerName" />
        <View
            android:id="@+id/vCustomerAddress"
            app:layout_constraintTop_toBottomOf="@id/etCustomerAddress"
            android:background="@drawable/bg_alpha_both_side_black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/etPhoneNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:gravity="center"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/colorDarkGray"
            android:textColorHint="@color/colorAlphaDarkBlue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vCustomerAddress" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/vBottomBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPhoneNo"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/pbLoadingInvoiceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/rv"
            app:layout_constraintEnd_toEndOf="@id/rv"
            app:layout_constraintStart_toStartOf="@id/rv"
            app:layout_constraintTop_toTopOf="@id/rv"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_border_dark"
            android:paddingBottom="10dp"
            android:paddingEnd="50dp"
            android:paddingStart="50dp"
            android:paddingTop="10dp"
            android:text="@string/retry"
            android:textColor="@color/colorBgDefaultWhite"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tvMessage"
            app:layout_constraintEnd_toEndOf="@id/rv"
            app:layout_constraintStart_toStartOf="@id/rv"
            app:layout_constraintTop_toTopOf="@id/rv"
            app:layout_constraintVertical_chainStyle="packed"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorBgDefaultBlue"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/rv"
            app:layout_constraintEnd_toEndOf="@id/rv"
            app:layout_constraintStart_toStartOf="@id/rv"
            app:layout_constraintTop_toBottomOf="@id/tvRetry"
            tools:text="error"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow"
            app:layout_constraintTop_toTopOf="@+id/rv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow_reversed"
            app:layout_constraintBottom_toTopOf="@id/vBottomBar" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/vBottomBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabAddItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                app:backgroundTint="@color/colorBgDefaultBlue"
                android:src="@drawable/ic_add_item"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/barrierHorizontal"
                android:layout_width="1dp"
                android:layout_height="10dp"
                app:layout_constraintEnd_toStartOf="@id/fabAddItem"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvLabelTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/total_and_colon"
                android:textColor="@color/colorBgDefaultBlue"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/tvValueTotal"
                app:layout_constraintEnd_toStartOf="@id/tvValueTotal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintWidth_min="wrap" />

            <TextView
                android:id="@+id/tvValueTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:gravity="end"
                android:text="@string/_0_00"
                android:textColor="@color/colorBgDefaultBlue"
                app:layout_constraintBottom_toTopOf="@id/tvValueDiscount"
                app:layout_constraintEnd_toStartOf="@id/barrierHorizontal"
                app:layout_constraintStart_toEndOf="@id/tvLabelTotal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tvLabelTaxAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/tax_amt_and_colon"
                android:textColor="@color/colorBgDefaultBlue"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvValueTaxAmount"
                app:layout_constraintEnd_toStartOf="@id/tvValueTaxAmount"
                app:layout_constraintStart_toEndOf="@id/barrierHorizontal"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintWidth_min="wrap" />

            <TextView
                android:id="@+id/tvValueTaxAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:gravity="end"
                android:text="@string/_0_00"
                android:textColor="@color/colorBgDefaultBlue"
                app:layout_constraintBottom_toTopOf="@+id/tvValueNetTotal"
                app:layout_constraintEnd_toStartOf="@id/fabAddItem"
                app:layout_constraintStart_toEndOf="@id/tvLabelTaxAmount"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tvLabelDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/discount_and_colon"
                android:textColor="@color/colorBgDefaultBlue"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvValueDiscount"
                app:layout_constraintEnd_toStartOf="@id/tvValueDiscount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintWidth_min="wrap" />

            <TextView
                android:id="@+id/tvValueDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:text="@string/_0_00"
                android:textColor="@color/colorBgDefaultBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/barrierHorizontal"
                app:layout_constraintStart_toEndOf="@id/tvLabelDiscount"
                app:layout_constraintTop_toBottomOf="@id/tvValueTotal" />

            <TextView
                android:id="@+id/tvLabelNetTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/net_total"
                android:textColor="@color/colorBgDefaultBlue"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/tvValueNetTotal"
                app:layout_constraintEnd_toStartOf="@id/tvValueNetTotal"
                app:layout_constraintStart_toEndOf="@id/barrierHorizontal"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintWidth_min="wrap" />

            <TextView
                android:id="@+id/tvValueNetTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:text="@string/_0_00"
                android:textColor="@color/colorBgDefaultBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fabAddItem"
                app:layout_constraintStart_toEndOf="@id/tvLabelNetTotal"
                app:layout_constraintTop_toBottomOf="@+id/tvValueTaxAmount" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>