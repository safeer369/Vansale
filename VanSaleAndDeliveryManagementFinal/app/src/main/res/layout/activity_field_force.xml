<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBgDefaultWhite"
    tools:context=".ui.filedforce.activities.FiledForceActivity">

    <View
        android:id="@+id/vTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBgDefaultBlue" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:src="@drawable/ic_back"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/vTitle"
        app:layout_constraintStart_toStartOf="@id/vTitle"
        app:layout_constraintTop_toTopOf="@id/vTitle"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:src="@drawable/ic_notification"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vTitle"
        app:layout_constraintEnd_toEndOf="@id/vTitle"
        app:layout_constraintTop_toTopOf="@id/vTitle"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorBgDefaultBlue"
        android:drawableEnd="@drawable/ic_date_white"
        android:drawablePadding="7dp"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorBgDefaultWhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vTitle"
        tools:text="10/1/2018" />

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_solid_blue"
        android:paddingStart="50dp"
        android:paddingTop="10dp"
        android:paddingEnd="50dp"
        android:paddingBottom="10dp"
        android:text="@string/retry"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBgDefaultBlue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRetry"
        tools:text="error"
        tools:visibility="visible" />

    <View
        android:id="@+id/vAllocated"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_rounded_corner_circle_and_border"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/vCompleted"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/vInProgress"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.35"
        tools:visibility="visible" />

    <View
        android:id="@+id/vInProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/selector_rounded_corner_circle_and_border"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vAllocated"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vAllocated"
        app:layout_constraintTop_toTopOf="@id/vAllocated"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.35"
        tools:visibility="visible" />

    <View
        android:id="@+id/vCompleted"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/selector_rounded_corner_circle_and_border"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/vCheckIn"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/vFailed"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vAllocated"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.35"
        tools:visibility="visible" />

    <View
        android:id="@+id/vFailed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/selector_rounded_corner_circle_and_border"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vCompleted"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vCompleted"
        app:layout_constraintTop_toTopOf="@id/vCompleted"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.35"
        tools:visibility="visible" />

    <View
        android:id="@+id/vCheckIn"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_rounded_corner_circle_and_border"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vFailed"
        app:layout_constraintStart_toStartOf="@id/vCompleted"
        app:layout_constraintTop_toBottomOf="@id/vCompleted"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvLabelAllocated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:text="@string/allocated"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvAllocatedCount"
        app:layout_constraintEnd_toEndOf="@id/vAllocated"
        app:layout_constraintStart_toStartOf="@id/vAllocated"
        app:layout_constraintTop_toTopOf="@id/vAllocated"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvAllocatedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp"
        android:text="@string/_0"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vAllocated"
        app:layout_constraintEnd_toEndOf="@id/vAllocated"
        app:layout_constraintStart_toStartOf="@id/vAllocated"
        app:layout_constraintTop_toBottomOf="@id/tvLabelAllocated"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvLabelInProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:text="@string/in_progress"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvInProgressCount"
        app:layout_constraintEnd_toEndOf="@id/vInProgress"
        app:layout_constraintStart_toStartOf="@id/vInProgress"
        app:layout_constraintTop_toTopOf="@id/vInProgress"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvInProgressCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp"
        android:text="@string/_0"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vInProgress"
        app:layout_constraintEnd_toEndOf="@id/vInProgress"
        app:layout_constraintStart_toStartOf="@id/vInProgress"
        app:layout_constraintTop_toBottomOf="@id/tvLabelInProgress"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvLabelCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:text="@string/completed"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvCompletedCount"
        app:layout_constraintEnd_toEndOf="@id/vCompleted"
        app:layout_constraintStart_toStartOf="@id/vCompleted"
        app:layout_constraintTop_toTopOf="@id/vCompleted"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvCompletedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp"
        android:text="@string/_0"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vCompleted"
        app:layout_constraintEnd_toEndOf="@id/vCompleted"
        app:layout_constraintStart_toStartOf="@id/vCompleted"
        app:layout_constraintTop_toBottomOf="@id/tvLabelCompleted"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvLabelFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:text="@string/failed"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvFailedCount"
        app:layout_constraintEnd_toEndOf="@id/vFailed"
        app:layout_constraintStart_toStartOf="@id/vFailed"
        app:layout_constraintTop_toTopOf="@id/vFailed"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvFailedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp"
        android:text="@string/_0"
        android:textColor="@color/colorBgDefaultWhite"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vFailed"
        app:layout_constraintEnd_toEndOf="@id/vFailed"
        app:layout_constraintStart_toStartOf="@id/vFailed"
        app:layout_constraintTop_toBottomOf="@id/tvLabelFailed"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvCheckIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/caps_unscheduled"
        android:textColor="@color/colorBgDefaultWhite"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/vCheckIn"
        app:layout_constraintEnd_toStartOf="@id/tvCheckInCount"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/vCheckIn"
        app:layout_constraintTop_toTopOf="@id/vCheckIn"
        app:layout_constraintWidth_default="wrap" />

    <ImageView
        android:id="@+id/ivCreateCheckIn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_alpha_both_side_white"
        android:padding="7dp"
        android:src="@drawable/ic_create"
        app:layout_constraintBottom_toBottomOf="@id/vCheckIn"
        app:layout_constraintEnd_toEndOf="@id/vCheckIn"
        app:layout_constraintTop_toTopOf="@id/vCheckIn" />

    <TextView
        android:id="@+id/tvCheckInCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:padding="1dp"
        android:text="999"
        android:textColor="@color/colorBgDefaultWhite"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/vCheckIn"
        app:layout_constraintEnd_toStartOf="@id/ivCreateCheckIn"
        app:layout_constraintStart_toEndOf="@id/tvCheckIn"
        app:layout_constraintTop_toTopOf="@id/vCheckIn"
        app:layout_constraintWidth_default="wrap"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>